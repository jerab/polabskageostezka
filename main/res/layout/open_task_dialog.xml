<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:id="@+id/content_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="@color/colorBila"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:textColor="@color/colorTextTmava2"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Dotaz, co chce uživatel otevřít."
            android:textAlignment="center"
            android:textColor="@color/colorTextTmava2"
            android:scrollbars="vertical"
            android:maxLines="5"
            />

        <Button
            android:id="@+id/buttonTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spustit úlohu"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            />

        <Button
            android:id="@+id/buttonWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informace na webu"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
    <ImageButton
        android:id="@+id/closeButton"
        style="@style/GeoThemeTaskInfoFragmentClose"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />
</RelativeLayout>