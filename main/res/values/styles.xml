<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- widget styles -->
    <style name="GeoThemeRadioButt" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@drawable/radio_button_task</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:paddingBottom">30dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:state_multiline">true</item>
    </style>

    <!--style name="GeoThemeRadioButtOk" parent="GeoThemeRadioButt">
        <item name="android:background">@drawable/ic_radio_button_correct</item>
    </style>
    <style name="GeoThemeRadioButtNo" parent="GeoThemeRadioButt">
        <item name="android:background">@drawable/ic_radio_button_false</item>
    </style>
    <style name="GeoThemeRadioButtEmpty" parent="GeoThemeRadioButt">
        <item name="android:background">@drawable/ic_radio_button_empty</item>
    </style>
    <style name="GeoThemeRadioButtChecked" parent="GeoThemeRadioButt">
        <item name="android:background">@drawable/ic_radio_button_checked</item>
    </style-->




    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:radioButtonStyle">@style/GeoThemeRadioButt</item>
    </style>

    <style name="GeoThemeWelcome" parent="AppTheme">
        <!--item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">true</item-->
        <!--item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item-->
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="GeoThemeTaskActivity" parent="AppTheme">
        <item name="android:icon">@drawable/icon_logo_dark_transp</item>
        <item name="android:screenOrientation">portrait</item>
    </style>
<!-- DASHBOARD -->
    <style name="GeoThemeDashboardButton">
        <item name="android:gravity">center</item>
    </style>

    <style name="GeoThemeDashboardUlohy" parent="android:Widget.GridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorPozadiTaskTmava</item>
        <item name="android:stretchMode">spacingWidthUniform</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GeoThemeDashboardUlohyIntro" parent="GeoThemeDashboardUlohy">
        <item name="android:numColumns">2</item>
        <item name="android:columnWidth">@dimen/dimTaskButtIntroWidth</item>
        <item name="android:verticalSpacing">30dp</item>
        <!--item name="android:horizontalSpacing">80dp</item-->
        <item name="android:paddingTop">80dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
    </style>
    <style name="GeoThemeDashboardUlohyMain" parent="GeoThemeDashboardUlohy">
        <item name="android:columnWidth">@dimen/dimTaskButtMainWidth</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:verticalSpacing">10dp</item>
        <!--item name="android:horizontalSpacing">10dp</item-->
        <item name="android:padding">20dp</item>
    </style>

    <style name="GeoThemeDashboardMapa">
        <item name="android:background">#AF9879</item>
        <item name="android:src">@drawable/planek_stezky</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
<!-- END DASHBOARD -->
<!-- TASKY -->
    <style name="GeoThemeTask">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="GeoThemeTaskQuiz" parent="GeoThemeTask">
        <item name="android:background">@color/colorPozadiTaskSvetla</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">30dp</item>
    </style>

    <style name="GeoThemeTaskInfoFragment">
        <item name="android:background">#DDD</item>
    </style>

    <style name="GeoThemeTaskInfoFragmentClose">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:src">@drawable/ic_check_no</item>
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:width">60dp</item>
        <item name="android:layout_gravity">right</item>
    </style>
<!-- DD TASK IMAGES -->
    <style name="GeoThemeZoomIconLB">
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:paddingBottom">22dp</item>
        <!--<item name="android:layout_width">@dimen/dimTaskDragDrop_targetImg_width</item>
        <item name="android:layout_height">@dimen/dimTaskDragDrop_targetImg_height</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!--item name="android:background">@drawable/zoom_default</item-->
    </style>
</resources>
